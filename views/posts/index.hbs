<h1>Posts</h1>

<form action='posts/new' method='POST'>
    <textarea
      style='resize:none'
      type='text'
      class='post_text'
      placeholder="Type what's on your mind!"
      name='text'
      rows='5'
      cols='40'
      maxlength='200'
    ></textarea>
    <input type='submit' value='Submit' />

<ul class='posts_list'>
  {{#each posts}}
    <div
      class='posts'
      id='{{this.id}}'
      onclick="window.location.href='/posts/{{this.id}}'"
    >{{this.message}}</div>

  {{/each}}
</ul>