<head>
  <title>{{title}}</title>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light">
<a class="navbar-brand" href="#">Ace<b>Book</b></a>  		
<button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
  <span class="navbar-toggler-icon"></span>
</button>
<!-- Collection of nav links, forms, and other content for toggling -->
<div id="navbarCollapse" class="collapse navbar-collapse justify-content-start">
  <div class="navbar-nav">
    <a href="/posts/" class="nav-item nav-link">Home</a>
    <a href="#" class="nav-item nav-link">Profile</a>			
    <a href="/logout" class="nav-item nav-link">Logout</a>
    <a href="#" class="nav-item nav-link">Contact</a>
      </div>
  <div class="navbar-nav ml-auto">
</div>
</nav>

<!-- Posts form section begins -->

<section class='form_section'>
  <h1 class="section_title">Posts</h1>
  <form action='posts/new' method='POST' enctype="multipart/form-data">
    <textarea
      style='resize:none'
      type='text'
      class='post_text'
      placeholder="Type what's on your mind!"
      name='text'
      rows='5'
      cols='40'
      maxlength='200'
    ></textarea>
    <input type="file" name="pic">
    <input type='submit' value='Submit' />
  </form>
</section>

<!-- Posts form section ends -->

<!-- Posts display section begins -->
<section class='posts_section'>
  <ul class='posts_list'>
    {{#each posts}}
      <li>
        <div
        class='posts'
        id='{{this.id}}'
        onclick="window.location.href='/posts/{{this.id}}'"
        >
        <p>
          <h2 class="post_text">{{this.message}}</h2>
          {{#if this.image}}
            <img src="data:image/jpeg;base64,{{this.image}}"/>
          {{/if}}
          <em>- Posted by {{this.name}} on {{this.time}}</em>
        </p>
      </li>
    </div>
    {{/each}}
  </ul>
</section>

<!-- Posts display section ends -->

