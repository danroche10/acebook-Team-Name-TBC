<h1 class='h1'>Post</h1>

{{#each post}}
  <div class='single_post' id='{{this.id}}'>{{this.message}}</div>

  <form action='id/comment/new' method='POST'>
    <textarea
      style='resize:none'
      type='text'
      class='comment'
      placeholder='What do you want to comment?'
      name='text'
      rows='5'
      cols='40'
    ></textarea>
    <input type='hidden' value='{{this.id}}' name='post_id' />
    <input type='submit' value='Submit' />
  </form>
{{/each}}

{{#each comments}}
  <div class='comments' id='{{this.id}}'>{{this.comment}}</div>
{{/each}}